{
  "manifest_version": 3,
  "name": "Context Menu Extension",
  "version": "1.0",
  "description": "Adds a custom option to the context menu.",
  "permissions": ["contextMenus", "storage","activeTab", "scripting", "tabs"],
  
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
